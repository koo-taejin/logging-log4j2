<Configuration name="XMLPerfTest" status="error">
    <Properties>
        <Property name="backupsize">100MB</Property>
        <Property name="rolling-date-format">%d{yyyy-MM-dd}</Property>
        <Property name="file_message_pattern">%d{MM-dd HH:mm:ss.sss} [%15.15t] %-5level %-40.40logger{1.} : %msg%n</Property>
    </Properties>


    <Appenders>
        <RollingFile name="rollingFile" filename="${logging_dir}/logging-test.log"
                     filepattern="${logging_dir}/logging-test-${rolling-date-format}-%i.log" >
            <PatternLayout>
                <Pattern>${file_message_pattern}</Pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
                <SizeBasedTriggeringPolicy size="${backupsize}"/>
            </Policies>
            <DefaultRolloverStrategy max="20">
                <Delete basePath="${logging_dir}/" maxDepth="1">
                    <IfFileName glob="logging-test-*-*.log">
                        <IfAny>
                            <IfAccumulatedFileSize exceeds="10GB" />
                            <IfAccumulatedFileCount exceeds="100" />
                        </IfAny>
                    </IfFileName>
                </Delete>
            </DefaultRolloverStrategy>
        </RollingFile>

        <File name="TestLogfile" fileName="target/testlog4j2.log">
            <PatternLayout>
                <Pattern>${file_message_pattern}</Pattern>
            </PatternLayout>
        </File>
    </Appenders>

    <Loggers>


        <Logger name="FileAppender" level="debug" additivity="false">
            <AppenderRef ref="TestLogfile" />
        </Logger>
        <Logger name="RollingFileAppender" level="debug" additivity="false">
            <AppenderRef ref="rollingFile" />
        </Logger>


        <Root level="debug">
            <AppenderRef ref="TestLogfile"/>
        </Root>
    </Loggers>
</Configuration>